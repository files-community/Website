		"rehype-color-preview": "^0.1.5",
		"remark-gfm": "^4.0.0",
		"remark-github": "^12.0.0",
		"remark-slug": "^7.0.1",
		"sass": "^1.71.0",
		"svelte": "^4.2.11",
		"svelte-check": "^3.6.4",
		"svelte-i18n": "4.0.0",
		"svelte-preprocess": "^5.1.3",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"unplugin-icons": "0.18.5",
		"vite": "^5.1.3"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown --plugin-search-dir=."
	},
	"engines": {
		"pnpm": ">=8",
		"node": ">=18"
