		"typescript": "^5.5.4",
		"typescript-eslint": "^8.1.0",
		"unplugin-icons": "0.19.2",
		"vite": "^5.4.1"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown --plugin-search-dir=."
