		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.17.0",
		"unplugin-icons": "0.21.0",
		"vite": "^6.0.3"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown --plugin-search-dir=."
	},
	"engines": {
		"pnpm": ">=8",
		"node": ">=20"
	},
	"type": "module"
