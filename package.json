		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"@types/eslint": "^9.6.1",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"fluent-svelte": "^1.6.0",
		"globals": "^15.13.0",
		"husky": "^9.1.7",
		"lightningcss": "^1.28.2",
		"lint-staged": "^15.2.10",
